{
  "lexicon": 1,
  "id": "pub.chive.graph.fieldProposal",
  "defs": {
    "main": {
      "type": "record",
      "description": "Community proposal for knowledge graph field (Wikipedia-style)",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["proposalType", "rationale", "createdAt"],
        "properties": {
          "fieldId": {
            "type": "string",
            "description": "Existing field ID (for updates/merges/deletes)"
          },
          "proposalType": {
            "type": "string",
            "knownValues": ["create", "update", "merge", "delete"]
          },
          "proposedLabel": {
            "type": "string",
            "maxLength": 200
          },
          "proposedDescription": {
            "type": "string",
            "maxLength": 1000
          },
          "wikidataId": {
            "type": "string",
            "description": "Wikidata Q-ID"
          },
          "rationale": {
            "type": "string",
            "description": "Justification for proposal",
            "maxLength": 2000
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    }
  }
}
