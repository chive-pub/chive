{
  "lexicon": 1,
  "id": "pub.chive.author.searchAuthors",
  "defs": {
    "main": {
      "type": "query",
      "description": "Search for authors by name or other criteria",
      "parameters": {
        "type": "params",
        "required": ["q"],
        "properties": {
          "q": {
            "type": "string",
            "minLength": 1,
            "description": "Search query"
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 25,
            "description": "Maximum results to return"
          },
          "cursor": {
            "type": "string",
            "description": "Pagination cursor"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["authors"],
          "properties": {
            "authors": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "#authorSearchResult"
              }
            },
            "cursor": {
              "type": "string",
              "description": "Cursor for next page"
            }
          }
        }
      }
    },
    "authorSearchResult": {
      "type": "object",
      "required": ["did"],
      "properties": {
        "did": {
          "type": "string",
          "format": "did"
        },
        "handle": {
          "type": "string"
        },
        "displayName": {
          "type": "string"
        },
        "avatar": {
          "type": "string",
          "format": "uri"
        },
        "affiliation": {
          "type": "string"
        },
        "eprintCount": {
          "type": "integer"
        }
      }
    }
  }
}
