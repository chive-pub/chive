  "scripts": {
    "dev": "./scripts/dev.sh local",
    "dev:local": "./scripts/dev.sh local",
    "dev:tunnel": "./scripts/dev.sh tunnel",
    "dev:db": "./scripts/dev-db.sh",
    "dev:stop": "./scripts/dev-stop.sh",
    "dev:stop:all": "./scripts/dev-stop.sh --all",
    "dev:api": "PORT=3001 tsx watch src/index.ts",
    "dev:indexer": "tsx watch src/indexer.ts",
    "dev:turbo": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:unit:watch": "vitest --config vitest.unit.config.ts",
    "test:unit:ui": "vitest --ui --config vitest.unit.config.ts",
    "test:integration": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:compliance": "vitest run --config vitest.compliance.config.ts",
    "test:performance": "k6 run tests/performance/baseline-load.js",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "lexicons:generate": "./scripts/generate-lexicons.sh",
    "lexicons:validate": "tsx scripts/validate-lexicon-schemas.ts",
    "openapi:generate": "./scripts/generate-api-types.sh",
    "test:stack:start": "./scripts/start-test-stack.sh",
    "test:stack:stop": "docker-compose -f docker/docker-compose.yml down",
    "seed:test": "./scripts/seed-test-data.sh",
    "cleanup:test": "./scripts/cleanup-test.sh",
    "db:init": "./scripts/db/init-all.sh",
    "db:migrate:up": "tsx scripts/db/migrate.ts up",
    "db:migrate:down": "tsx scripts/db/migrate.ts down",
    "db:migrate:create": "tsx scripts/db/migrate.ts create",
    "db:seed:knowledge-graph": "tsx scripts/db/seed-knowledge-graph.ts"
  },
  "devDependencies": {
    "@atproto/lex-cli": "^0.9.8",
